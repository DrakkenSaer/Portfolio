<div class="<%= col_size %> portfolio">
  <ul class="center">    
    <% if current_page?(action: 'index') %><h2><%= project.title %></h2>
    <li><%= link_to image_tag(project.image.url(size), class: img_type), link, class: "img-thumbnail img-darken" %></li>
    <% else %>
    <li><%= link_to image_tag(project.image.url(size), class: img_type), link, class: img_type + " img-darken" %></li>
    <li><%= link_to 'Visit the website', project.link %></li>
    <li><b>Description</b></li><li><%= word_wrap(description, line_width: 50) %></li>
    <li><%= link_to "View details >>", project, class: "btn btn-default" if current_page?(action: 'index') %></li>
    <% if signed_in? && current_page?(project) %>
    <li>
      <%= link_to 'Edit project', edit_project_path(project) %> | 
      <%= link_to 'Delete project', project, method: :delete,  data:{confirm: "Are you sure?"} %>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>