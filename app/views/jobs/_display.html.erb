Position held: <%= job.title %><br>
Company: <%= job.company %><br>
Years at job: <%= job.years %><br>
Supervisor: <%= job.manager %><br>
Supervisor contact: <%= job.contact %><br>
Description: <%= word_wrap(truncate(job.description, length:200), line_width: 50) %><br>
<%= link_to 'More details', job_path(job) if current_page?(action: 'index') %> 
<% if signed_in? %> 
  <%= link_to 'Edit job', edit_job_path(job) %>
  <%= link_to 'Delete job', job_path(job), method: :delete,  data:{confirm: "Are you sure?"} %>
<% end %> 