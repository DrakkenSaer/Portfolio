<div class="row">
  <div class="span6 offset3">
    <%= form_for @job do |f| %>
    <%= render 'shared/error_messages', object: @job %>
 
        <%= f.label :title %><br>
        <%= f.text_field :title %>

        <%= f.label :company %><br>
        <%= f.text_field :company %>

        <%= f.label :description %><br>
        <%= f.text_area :description %>

        <%= f.label :years %><br>
        <%= f.number_field :years %>

        <%= f.label :manager %><br>
        <%= f.text_field :manager %>

        <%= f.label :contact %><br>
        <%= f.telephone_field :contact %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>