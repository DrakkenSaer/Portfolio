<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @job do |f| %>
    <%= render 'shared/error_messages', object: @job %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :company %>
    <%= f.text_field :company, class: 'form-control' %>

    <%= f.label :years %>
    <%= f.number_field :years, class: 'form-control' %>

    <%= f.label :manager %>
    <%= f.text_field :manager, class: 'form-control' %>

    <%= f.label :contact %>
    <%= f.telephone_field :contact, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>

    <%= f.label :skills %>
    <%= f.text_field :skills, class: 'form-control' %>

    <%= f.submit "Submit", class: "btn btn-large btn-primary center" %>
    <% end %>
  </div>
</div>