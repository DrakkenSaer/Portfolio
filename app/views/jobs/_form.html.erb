<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @job, role: 'form', html:{multipart:true} do |f| %>
    <%= render 'shared/error_messages', object: @job %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :company %>
    <%= f.text_field :company, class: 'form-control' %>

    <%= f.label :years %>
    <%= f.text_field :years, class: 'form-control' %>

    <%= f.label :manager %>
    <%= f.text_field :manager, class: 'form-control' %>

    <%= f.label :contact %>
    <%= f.telephone_field :contact, class: 'form-control' %>

    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>

    <%= f.label :skills %>
    <%= f.text_field :skills, class: 'form-control' %>
    
    <%= f.label :references %>
    <br>
    <%= f.fields_for :references, @references do |references_form| %>
    <%= references_form.text_field :reference, class: 'form-control' %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: 'width-100' %>

    <div class="center">
      <div class="btn-group">  
        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>