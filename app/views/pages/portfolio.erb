<% provide(:title, 'Portfolio') %>

<h1>Portfolio</h1>

<div class="row">
  <% if signed_in? %>
  <div class="col-md-6"><%= link_to 'New Photo', new_photo_path, class: "center" %></div>
  <div class="col-md-6"><%= link_to 'New Project', new_project_path, class: "center" %></div>
  <% end %>
</div>

<!-- Use active record caching and render model results to page -->
<div class="row">
  <% unless @project.nil? %>
    <% cache(@project) do %>
      <%= render 'portfolio_display', title: "Projects", object: @project, size: :medium, link: projects_path, col_size: "col-md-6", img_type: "img-responsive" %>
    <% end %>
  <% end %>

  <% unless @photo.nil? %>
    <% cache(@photo) do %>
      <%= render 'portfolio_display', title: "Modeling", object: @photo, size: :medium, link: photos_path, col_size: "col-md-6", img_type: "img-responsive" %>
    <% end %>
  <% end %>
</div>