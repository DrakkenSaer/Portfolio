<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Berkshire+Swash', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Abel', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Oregano', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>  
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="web developer, web design, ruby on rails, css, bootstrap, jquery">
    <meta name="description" content="Get help building your website from a Ruby on Rails dev">
    <meta name="author" content="Drakken Saer">
    <meta name="robots" content="index, follow">
    <script>
      $(document).ready(function (){
        (function() {
          if ("-ms-user-select" in document.documentElement.style && navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            msViewportStyle.appendChild(
              document.createTextNode("@-ms-viewport{width:auto!important}")
            );
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
          }
        })();
      });
    </script>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <%= render "layouts/header" %>
    <div id="main" class=<%= page_base(yield(:container)) %>>
      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissible container" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span   class="sr-only">Close</span></button>
        <%= value %>
      </div>
      <% end %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>