<!DOCTYPE html>
<html ng-app="app" ng-strict-di>
  <head>
    <base href="/">
    <title update-title>Saer Designs</title>
    <%= stylesheet_link_tag  'application' %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Berkshire+Swash' %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Abel' %>
    <%= stylesheet_link_tag  'http://fonts.googleapis.com/css?family=Oregano' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="web developer, web design, ruby on rails, css, bootstrap, jquery, website builder, ruby, php">
    <meta name="author" content="Drakken Saer">
    <meta name="robots" content="index, follow">
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- do not render on resume page -->
    <div ng-include="'layouts/header.html'"></div>
    <!-- conditional container logic used for CSS needs for specific pages -->
    <div ui-view id="main">
      
      <!-- for page flash alerts -->
      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissible container" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span   class="sr-only">Close</span></button>
        <%= value %>
      </div>
      <% end %>
      
      <!-- page content goes here -->
      <%= yield %>
    
    </div>
    <!-- do not render on resume page -->
    <div ng-include="'layouts/footer.html'"></div>
    
    <div class="container-fluid white">
      <div class="container">
        <% if Rails.env.development? %>
        <%= debug(params) %>
        <div ng-controller="TestCtrl" class="debug_dump">{{test}}</div>
        <% end %>
      </div>
    </div>
    
  </body>
</html>